<div class="container">
    <h1><%= @task.title %></h1>
      <%= link_to "Edit this task", edit_task_path %>
    <%= @task.details %>
    <% if @task.completed? %>
      <h3>This task is complete</h3>
    <% else %>
      <h3>This task is incomplete</h3>
    <% end %>

    <i class="far fa-square"></i>
    <%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>

      <%= link_to "Back to list", tasks_path %>
    </div>
