
<div class="container">
  <h1>Edit task</h1>
  <%= form_for(@task) do |form| %>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :details %>
      <%= form.text_field :details, class: 'form-control' %>
    </div>

    <div class="form-check">
      <%= form.check_box :completed, class: 'form-check-input' %>
      <%= form.label :completed, "Done", class: 'form-check-label' %></span>
    </div>

    <div class="input"><%= form.submit class: 'btn btn-primary' %></div>
  <% end %>

      <%= link_to "Back to tasks", tasks_path %>

</div>
